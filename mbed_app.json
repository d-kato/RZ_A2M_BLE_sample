{
    "config": {
        "ble_button_pin_name": {
            "help": "The pin name used as button in this application",
            "macro_name": "BLE_BUTTON_PIN_NAME",
            "required": true
        },
        "camera":{
            "help": "0:disable 1:enable",
            "value": "0"
        },
        "camera-type":{
            "help": "Please see EasyAttach_CameraAndLCD/README.md",
            "value": null
        },
        "lcd":{
            "help": "0:disable 1:enable",
            "value": "0"
        },
        "lcd-type":{
            "help": "Please see EasyAttach_CameraAndLCD/README.md",
            "value": null
        }
    },
    "target_overrides": {
        "*": {
            "platform.stdio-baud-rate": 115200,
            "platform.stdio-convert-newlines": true,
            "target.macros_add": ["MBED_CONF_APP_MAIN_STACK_SIZE=8192",
                                  "LCD_SIZE=SD_7INCH"],
            "ble_button_pin_name": "USER_BUTTON0"
        },
        "RZ_A1H": {
            "target.features_add"    : ["BLE"],
            "target.extra_labels_add": ["ESP32AT_BLE"]
        },
        "GR_LYCHEE": {
            "target.features_add"    : ["BLE"],
            "target.extra_labels_add": ["ESP32AT_BLE"]
        },
        "RZ_A2M_EVB": {
            "target.bootloader_img" : "bootloader_d_n_d/RZ_A2M_EVB_boot.bin",
            "target.app_offset"     : "0x20000",
            "target.features_add"    : ["BLE"],
            "target.extra_labels_add": ["ESP32AT_BLE"],
            "esp32.wifi-en" : "P6_1",
            "esp32.wifi-tx" : "P6_3",
            "esp32.wifi-rx" : "P6_2",
            "esp32.provide-default": true,
            "esp32.wifi-baudrate":400000
        },
        "RZ_A2M_SBEV": {
            "target.bootloader_img" : "bootloader_d_n_d/RZ_A2M_SBEV_boot.bin",
            "target.app_offset"     : "0x20000",
            "target.macros_add"     : ["OVERRIDE_CONSOLE_USBSERIAL"],
            "target.features_add"    : ["BLE"],
            "target.extra_labels_add": ["ESP32AT_BLE"],
            "esp32.wifi-en" : "PJ_7",
            "esp32.wifi-tx" : "PJ_2",
            "esp32.wifi-rx" : "PJ_1",
            "esp32.wifi-rts": "PJ_3",
            "esp32.wifi-cts": "PJ_4",
            "esp32.provide-default": true,
            "esp32.wifi-baudrate":1152000
        },
        "SEMB1402": {
            "target.bootloader_img" : "bootloader_d_n_d/SEMB1402_boot.bin",
            "target.app_offset"     : "0x20000",
            "target.macros_add"     : ["OVERRIDE_CONSOLE_USBSERIAL"],
            "target.features_add"    : ["BLE"],
            "target.extra_labels_add": ["ESP32AT_BLE"],
            "esp32.wifi-en" : "PH_6",
            "esp32.wifi-tx" : "PF_5",
            "esp32.wifi-rx" : "PF_4",
            "esp32.wifi-rts": "PF_6",
            "esp32.wifi-cts": "PH_2",
            "esp32.provide-default": true,
            "esp32.wifi-baudrate":1152000
        }
    }
}
